{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "scripts", "types.d.ts"]
}